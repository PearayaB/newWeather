<style>
    @import url('https://fonts.googleapis.com/css2?family=Zen+Old+Mincho&display=swap');

*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Zen Old Mincho', serif;
}

.center{
    display: flex;
    width: 100%;
    height: 100vh;
    justify-content: center;
    align-items: center;
}

.container{
    display: grid;
    grid-template-areas: "header header"
                         "city temp"
                         "city fahrenheit"
                         "city humidity";
                         /* "city PM"  */
    grid-template-columns: 60% 40%;
    grid-template-rows: 55px 1fr 1fr;
    width: 500px;
    height: 300px;
    border-radius: 30px;
    box-shadow: 3px 3px 50px rgba(0, 0, 0, 0.1);
}

header{
    grid-area: header;
    padding: 10px;
    border-radius: 30px 30px 0 0;
    text-align: center;
    background: linear-gradient(to right,#43c6ac,#5691ff);
}

header input{
    outline: none;
    border:none;
    padding: 10px 20px;
    border-radius: 20px;
}

header a{
    color: #fff;
    padding: 8px 10px;
    transition: .3s;
    border-radius: 50%;
}

header a:hover{
    background: rgba(255, 255, 255, 0.5);
}

.city{
    grid-area: city;
    display: flex;
    justify-content: center;
    align-items: center;
    border-right: 1px solid rgb(185, 205, 206);
    font-size: 2em;
}

.temperature{
    grid-area: temp;
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid rgb(185, 205, 206);
    font-size: 2em;
}

.fahrenheit{
    grid-area: fahrenheit;
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid rgb(185, 205, 206);
    font-size: 2em;
}

.humidity{
    grid-area: humidity;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 2em;
}
